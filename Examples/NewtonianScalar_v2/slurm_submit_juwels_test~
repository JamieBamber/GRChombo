#!/bin/bash -x
#SBATCH --account=pra116
#SBATCH --nodes=2
#SBATCH --ntasks-per-node=16
#SBATCH -J JOBNAME                                                                                                                            
#SBATCH --exclusive

# if keyword omitted: Max. 96 tasks per node
#SBATCH --cpus-per-task=6

# for OpenMP/hybrid jobs only
#SBATCH --output=std_out.txt
#SBATCH --error=std_error.txt
#SBATCH --time=0:20:00
#SBATCH --partition=devel

ulimit -c 0

# "batch" for normal use or "devel" for up to 8 nodes up to 2 hours

# *** start of job script ***
# Note: The current working directory at this point is
# the directory where sbatch was executed.
export OMP_NUM_THREADS=${SLURM_CPUS_PER_TASK}
srun /p/home/jusers/bamber1/juwels/GRChombo/Examples/NewtonianScalar/Main_ScalarField3d.Linux.64.mpiicpc.ifort.OPTHIGH.MPI.OPENMPCC.PETSC.ex ../params.txt


